<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.RecipeDivider" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="Theme.RecipeDivider.Main" parent="Theme.RecipeDivider">
        <item name="android:actionBarStyle">@style/ActionBar.Main</item>
    </style>

    <style name="ActionBar.Main" parent="ActionBar">
        <item name="android:displayOptions"></item>
        <item name="android:background">@drawable/bg_action_bar_with_logo</item>
    </style>

    <style name="ActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/Theme.RecipeDivider.TitleTextStyle</item>
    </style>

    <style name="Theme.RecipeDivider.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>