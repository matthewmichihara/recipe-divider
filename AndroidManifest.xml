<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recipedivider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_recipe_divider"
        android:label="@string/app_name"
        android:theme="@style/Theme.RecipeDivider" >
        <activity
            android:name="com.recipedivider.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.RecipeDivider.Main"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecipeSplitterActivity"
            android:label="@string/title_activity_recipe_splitter" >
        </activity>
        <activity
            android:name=".ui.RecipeResultsActivity"
            android:label="@string/title_activity_recipe_results" >
        </activity>

        <provider
            android:name=".db.RecipeProvider"
            android:authorities="com.recipedivider.contentprovider"
            android:exported="false" >
        </provider>
    </application>

</manifest>