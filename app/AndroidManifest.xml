<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recipedivider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateUnchanged" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecipeSplitterActivity"
            android:label="@string/title_activity_recipe_splitter" >
        </activity>
        <activity
            android:name=".ui.RecipeResultsActivity"
            android:label="@string/title_activity_recipe_results" >
        </activity>
        <activity
            android:name=".ui.RecipeBoxActivity"
            android:label="@string/title_activity_recipe_box" >
        </activity>
    </application>

</manifest>